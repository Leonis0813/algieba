<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title><%= t('views.title') %></title>
    <%= stylesheet_link_tag 'application', :media => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag %>

    <script type='text/javascript'>
      I18n.defaultLocale = '<%= I18n.default_locale %>';
      I18n.locale = '<%= I18n.locale %>';
      I18n.fallbacks = true;
    </script>
  </head>
  <body>
    <nav class='navbar navbar-inverse navbar-static-top' style='margin-bottom:0px'>
      <div class='container'>
        <%= link_to 'Payment Manager', payments_path, class: 'navbar-brand' %>
        <ul class='nav navbar-nav'>
          <li id='link-management'>
            <%= link_to '管理画面', payments_path %>
          </li>
          <li id='link-statistics'>
            <%= link_to '統計画面', statistics_path %>
          </li>
        </ul>
      </div>
    </nav>

    <div id='main-content'>
      <%= bootstrap_flash %>
      <%= yield %>
    </div>
  </body>
</html>
