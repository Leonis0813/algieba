<% td_class = payment.payment_type == 'income' ? 'success' : 'danger' %>
<tr>
  <td class='<%= td_class %>'><%= t("views.payment.#{payment.payment_type}") %></td>
  <td class='<%= td_class %>'><%= payment.date %></td>
  <td class='<%= td_class %>'><%= payment.content %></td>
  <td class='<%= td_class %>'><%= payment.categories.pluck(:name).join(',') %></td>
  <td class='<%= td_class %>'><%= payment.price %></td>
  <td width='16' class='delete'>
    <%= button_tag(:class => 'btn btn-default btn-mini', :height => 16, :value => payment.id) do %>
      <%= image_tag 'trash.png', :size => '16x16' %>
    <% end %>
  </td>
</tr>
