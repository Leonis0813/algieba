<%= form_for @account, {:as => :accounts, :remote => true, :html => {:class => 'form-inline'}} do |f| %>
  <% [[:date, {}], [:content,  {:size => 100, :class => 'form-control'}], [:category, {}], [:price, {}]].each do |attribute, options| %>
    <span class='input-custom'>
      <%= f.label attribute, t("views.account.#{attribute}").html_safe + 'ï¼š' %><%= f.text_field attribute, {:class => 'form-control'}.merge(options) %>
    </span>
  <% end %>
  <% [[:income, {}], [:expense, {:checked => true}]].each do |account_type, options| %>
    <span class='input-custom'>
      <%= f.radio_button :account_type, account_type, options %><%= f.label "account_type_#{account_type}", t("views.account.#{account_type}").html_safe %>
    </span>
  <% end %>
  <span class='input-custom'><%= f.submit t('views.submit').html_safe, :class => 'btn btn-primary' %></span>
<% end %>

<hr>

<div id='pagination'>
  <%= paginate @accounts %>
</div>

<table class='table table-hover table-custom'>
  <thead>
    <tr>
      <% %w[ type date content category price ].each do |attribute| %>
        <th><%= t("views.account.#{attribute}").html_safe %></th>
      <% end %>
    </tr>
  </thead>
  <tbody id='accounts'>
    <%= render @accounts %>
  </tbody>
</table>
