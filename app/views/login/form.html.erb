<div class="login center-block">
  <h3>Account Manager</h3>
  <%= form_tag(login_path, :method => :post) do %>
    <div class="form-group">
      <%= label_tag :user_id, 'User ID' %><%= text_field_tag :user_id, nil, {:class => 'form-control'} %>
    </div>
    <div class="form-group">
      <%= label_tag :password, 'Password' %><%= text_field_tag :password, nil, {:class => 'form-control'} %>
    </div>
    <%= submit_tag 'Login', {:class => 'btn btn-primary'} %>
  <% end %>
  </div>
