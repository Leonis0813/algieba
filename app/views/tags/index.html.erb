<nav class='navbar navbar-inverse navbar-static-top' style='background-color: #555555'>
  <div class='container'>
    <ul class='nav navbar-nav'>
      <li>
        <%= link_to '収支', payments_path %>
      </li>
      <li>
        <%= link_to 'カテゴリ', categories_path %>
      </li>
      <li>
        <%= link_to '辞書', dictionaries_path %>
      </li>
      <li class='active'>
        <%= link_to 'タグ', tags_path %>
      </li>
    </ul>
  </div>
</nav>

<div class='row center-block'>
  <div class='col-lg-4'>
    <ul class='nav nav-tabs'>
      <li class='active'>
        <a href='#assign-form' data-toggle='tab'><%= t('views.assign.tab_name') %></a>
      </li>
      <li>
        <a href='#search-form' data-toggle='tab'><%= t('views.search.tab_name') %></a>
      </li>
    </ul>

    <div id='search-form' class='well tab-pane'>
      <h3><%= t('views.search.title') %></h3>
      <%= form_for @search_form, url: tags_path, method: :get do |f| %>

        <div class='form-group'>
          <%= label_tag :name, t('views.common.attribute.name') %>
          <%= text_field_tag :name, '', class: 'form-control', name: :name_include, value: @search_form.name_include %>
        </div>

        <%= f.submit t('views.search.submit'), id: 'tag-search-button', class: 'btn btn-primary btn-submit' %>
      <% end %>
    </div>
  </div>

  <div class='col-lg-8'>
    <div>
      <% from = @tags.total_count.zero? ? 0 : @tags.offset_value + 1 %>
      <% info = {total_count: @tags.total_count, from: from, to: @tags.offset_value + @tags.size} %>
      <h4 style='padding: 0px 10px;display: inline'><%= t('views.list.pagination.info', info) %></h4>
      <form style='padding: 0px 10px;display: inline' id='per_page_form' class='form-inline pull-right' onSubmit='return false;'>
        <label for='per_page'><%= t('views.list.pagination.label') %></label>
        <input type='text' id='per_page' class='form-control' name='per_page' value='<%= @per_page %>' size='10' >
      </form>
    </div>
    <%= paginate @tags %>
    <table id='tag_table' class='table table-hover'>
      <thead>
        <tr>
          <% %w[name].each do |attribute| %>
            <th id='<%= "header_#{attribute}" %>'><%= t("views.common.attribute.#{attribute}") %></th>
          <% end %>
          <th style='border: none'></th>
        </tr>
      </thead>
      <tbody>
        <%= render @tags %>
      </tbody>
    </table>
  </div>
</div>
